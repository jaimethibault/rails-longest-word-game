<div class="header-game">
  <div class="history">
    <h4><%= @player %>'s Past Games</h4>
    <p># games played: <%= @number_of_games %></p>
    <p>avg score: TODO</p>
  </div>
  <div class="title text-center">
    <h1>Longest word game</h1>
  </div>
  <div class="time text-right">
    <h4>Play as fast as you can</h4>
    <p>start time: <%= Time.now.strftime("%Hh%Mmin%Ssec") %></p>
    <p>current time: #TODO set a timer</p>
  </div>
</div>

<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3 core-game">
      <div class="form-group">
        <h4>Create the longest word you can!</h4>
      </div>
      <div class="form-group">
        <% @grid.each do |letter| %>
          <button class="btn btn-default btn-grid"> <%= letter %></button>
        <% end %>
      </div>
      <form action="/score" method="get">
        <div class="form-group" id="attempt-center">
          <input type="question" class="form-control text-center" name="attempt" id="attempt" placeholder="your best shot">
          <input type="hidden" class="form-control" name="grid" id="grid" value="<%= @grid %>">
          <input type="hidden" class="form-control" name="start_time" id="start_time" value="<%= Time.now %>">
        </div>
        <button type="submit" class="btn btn-danger">Check my score</button>
      </form>
    </div>
  </div>
</div>

